{
  "env": {
      "browser": true,
      "commonjs": true,
      "es6": true,
      "mocha": true
  },
  "extends": "airbnb-base",
  "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
      "ecmaVersion": 2018
  },
  "rules": {
      "linebreak-style":"off",
      "func-names": ["warn", "as-needed", { "generators": "never" }],
      "max-classes-per-file": "off",
      "no-underscore-dangle": "off"
  }
}
